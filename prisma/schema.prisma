datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

model Stats {
  id         Int      @id @default(autoincrement())
  gameId     Int
  wordLength Int
  customGame String?
  tries      Int
  won        Boolean
  createdAt  DateTime @default(now())
}
